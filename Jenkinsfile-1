pipeline {
    agent {
        docker {
            image 'docker:19.03.12' // Use Docker image that has Docker pre-installed
            args '-v /var/run/docker.sock:/var/run/docker.sock' // Mount Docker socket
        }
    }
    stages {
        stage('Check Docker') {
            steps {
                sh 'docker --version' // Should now work as Docker is available in the image
                sh 'node --version'   // This will still work because node is available
            }
        }
    }
}
